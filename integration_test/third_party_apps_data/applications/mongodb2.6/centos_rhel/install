set -e

cat << EOF > mongodb-org-2.6.repo
[mongodb-org-2.6]
name=MongoDB Repository
baseurl=https://repo.mongodb.org/yum/redhat/\$releasever/mongodb-org/2.6/x86_64/
gpgcheck=1
enabled=1
gpgkey=https://www.mongodb.org/static/pgp/server-2.6.asc
EOF

sudo mv mongodb-org-2.6.repo /etc/yum.repos.d/mongodb-org-2.6.repo
sudo chown root:root /etc/yum.repos.d/mongodb-org-2.6.repo
sudo chmod 0644 /etc/yum.repos.d/mongodb-org-2.6.repo

sudo yum install -y \
    mongodb-org-2.6.12 \
    mongodb-org-database-2.6.12 \
    mongodb-org-server-2.6.12 \
    mongodb-org-shell-2.6.12 \
    mongodb-org-mongos-2.6.12 \
    mongodb-org-tools-2.6.12

sudo systemctl enable mongod
sudo systemctl restart mongod

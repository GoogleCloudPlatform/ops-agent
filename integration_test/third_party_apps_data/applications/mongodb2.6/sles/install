set -e

sudo rpm --import https://www.mongodb.org/static/pgp/server-2.6.asc

source /etc/os-release
SUSE_VERSION="${VERSION_ID%%.*}"
case $SUSE_VERSION in
  15)
    sudo zypper addrepo --gpgcheck "https://repo.mongodb.org/zypper/suse/15/mongodb-org/2.6/x86_64/" mongodb
    ;;
  12)
    sudo zypper addrepo --gpgcheck "https://repo.mongodb.org/zypper/suse/12/mongodb-org/2.6/x86_64/" mongodb
    ;;
  *)
    echo -n "unknown version"
    exit 1
    ;;
esac

sudo zypper install -y \
    mongodb-org-2.6.12 \
    mongodb-org-database-2.6.12 \
    mongodb-org-server-2.6.12 \
    mongodb-org-shell-2.6.12 \
    mongodb-org-mongos-2.6.12 \
    mongodb-org-tools-2.6.12

sudo systemctl enable mongod
sudo systemctl restart mongod

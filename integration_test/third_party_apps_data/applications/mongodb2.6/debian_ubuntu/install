set -e

sudo apt-get update
sudo apt-get install -y gnupg wget
wget --no-verbose --output-document=- https://www.mongodb.org/static/pgp/server-2.6.asc | sudo apt-key add -

oscode="$(lsb_release -sc)"
osname="$(lsb_release -si)"

case $osname in
  Ubuntu)
    echo "deb [ arch=amd64,arm64 ] https://repo.mongodb.org/apt/ubuntu $oscode/mongodb-org/2.6 multiverse" | sudo tee /etc/apt/sources.list.d/mongodb-org-2.6.list
    ;;
  Debian)
    # Debian 11 is not officially supported, so use 'buster'.
    if [ "$oscode" = "bullseye" ]; then
      oscode="buster"
    fi
    echo "deb http://repo.mongodb.org/apt/debian $oscode/mongodb-org/2.6 main" | sudo tee /etc/apt/sources.list.d/mongodb-org-2.6.list
    ;;
  *)
    echo -n "unknown os release"
    exit 1
    ;;
esac

sudo apt-get update
sudo apt-get install -y \
    mongodb-org=2.6.12 \
    mongodb-org-database=2.6.12 \
    mongodb-org-server=2.6.12 \
    mongodb-org-shell=2.6.12 \
    mongodb-org-mongos=2.6.12 \
    mongodb-org-tools=2.6.12

systemctl enable mongod

sudo systemctl restart mongod

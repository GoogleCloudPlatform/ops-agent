set -e

sudo apt-get -y install gnupg wget
sudo sh -c 'echo "deb http://apt.postgresql.org/pub/repos/apt $(lsb_release -cs)-pgdg main" > /etc/apt/sources.list.d/pgdg.list'
wget --no-verbose --output-document=- https://www.postgresql.org/media/keys/ACCC4CF8.asc | sudo apt-key add -
sudo apt-get -y update
sudo apt-get install -y postgresql-14

sudo service postgresql restart

sudo su postgres -c "psql postgres -c \"ALTER ROLE postgres WITH PASSWORD 'abc123';\""
sudo su postgres -c "psql postgres -c \"CREATE TABLE test1 (id serial PRIMARY KEY);\""
sudo su postgres -c "psql postgres -c \"CREATE TABLE test2 (id serial PRIMARY KEY);\""
sudo su postgres -c "psql postgres -c \"CREATE INDEX otelindex ON test1(id);\""
sudo su postgres -c "psql postgres -c \"CREATE INDEX otelindex ON test2(id);\""
sudo su postgres -c "psql postgres -cINSERT INTO test2 (id) VALUES(67);\""
set -e

source /etc/os-release
case "${VERSION_ID}" in
  7)
    sudo yum -y install https://download.postgresql.org/pub/repos/yum/reporpms/EL-7-x86_64/pgdg-redhat-repo-latest.noarch.rpm
    ;;
  8|8.*)
    sudo yum -y install https://download.postgresql.org/pub/repos/yum/reporpms/EL-8-x86_64/pgdg-redhat-repo-latest.noarch.rpm
    sudo yum -qy module disable postgresql
    ;;
  *)
    echo -n "unknown version"
    exit 1
    ;;
esac

sudo yum install -y postgresql14-server postgresql14-contrib
sudo systemctl enable postgresql-14

sudo /usr/pgsql-14/bin/postgresql-14-setup initdb
sudo service postgresql-14 restart

sudo su postgres -c "psql postgres -c \"ALTER ROLE postgres WITH PASSWORD 'abc123';\""
sudo su postgres -c "psql postgres -c \"CREATE TABLE test1 (id serial PRIMARY KEY);\""
sudo su postgres -c "psql postgres -c \"CREATE TABLE test2 (id serial PRIMARY KEY);\""
sudo su postgres -c "psql postgres -c \"CREATE INDEX otelindex ON test1(id);\""
sudo su postgres -c "psql postgres -c \"CREATE INDEX otel2index ON test2(id);\""
sudo su postgres -c "psql postgres -c \"INSERT INTO test2 (id) VALUES(67);\""

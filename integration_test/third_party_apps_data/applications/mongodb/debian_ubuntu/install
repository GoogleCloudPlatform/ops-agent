set -e

sudo apt-get update
sudo apt-get install -y gnupg wget
wget --no-verbose --output-document=- https://www.mongodb.org/static/pgp/server-5.0.asc | sudo apt-key add -

oscode="$(lsb_release -sc)"
osname="$(lsb_release -si)"

case $osname in 
  Ubuntu)
    if [ "$oscode" = "lunar" ]; then
      # Ubuntu 23.04 is not officially supported, so use 'focal'.
      oscode="focal"
      wget http://archive.ubuntu.com/ubuntu/pool/main/o/openssl/libssl1.1_1.1.1f-1ubuntu2_amd64.deb
      sudo dpkg -i libssl1.1_1.1.1f-1ubuntu2_amd64.deb
      sudo apt-get install -y mongodb-org
    fi
    echo "deb [ arch=amd64,arm64 ] https://repo.mongodb.org/apt/ubuntu $oscode/mongodb-org/5.0 multiverse" | sudo tee /etc/apt/sources.list.d/mongodb-org-5.0.list
    ;;
  Debian)
    # Debian 11 is not officially supported, so use 'buster'.
    if [ "$oscode" = "bullseye" ]; then
      oscode="buster"
    fi
    echo "deb http://repo.mongodb.org/apt/debian $oscode/mongodb-org/5.0 main" | sudo tee /etc/apt/sources.list.d/mongodb-org-5.0.list
    ;;
  *)
    echo -n "unknown os release"
    exit 1
    ;;
esac

sudo apt-get update
sudo apt-get install -y \
    mongodb-org=5.0.14 \
    mongodb-org-database=5.0.14 \
    mongodb-org-server=5.0.14 \
    mongodb-org-shell=5.0.14 \
    mongodb-org-mongos=5.0.14 \
    mongodb-org-tools=5.0.14

systemctl enable mongod

sudo systemctl restart mongod
